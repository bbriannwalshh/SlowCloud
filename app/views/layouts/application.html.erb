    <script type="text/javascript">
      window.loveless ="<%= image_url('Loveless.jpg') %>"
      window.shoe ="<%= image_url('shoe.png') %>"
      window.waveform ="<%= image_url('waveform.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

